<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
           http://symfony.com/schema/dic/services
           http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="false" autoconfigure="false"/>

        <!-- Services -->
        <service id="RcDualPrice\Service\ConfigService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="RcDualPrice\Service\CategoryDualPriceHelper">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <!-- Event Subscribers mit expliziter Tag-Konfiguration -->
        <service id="RcDualPrice\Subscriber\PageSubscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="RcDualPrice\Service\ConfigService"/>
            <argument type="service" id="RcDualPrice\Service\CategoryDualPriceHelper"/>
            <argument type="service" id="Psr\Log\LoggerInterface"/>
            <argument type="service" id="product.repository"/>
        </service>

        <service id="RcDualPrice\Subscriber\CriteriaSubscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="Psr\Log\LoggerInterface"/>
        </service>
    </services>
</container>